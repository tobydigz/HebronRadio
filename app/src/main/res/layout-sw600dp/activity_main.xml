<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hebronradio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".MainActivity"
    >

    <TabHost
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabhost">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:showDividers="end">
            </TabWidget>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- Tab 1 About us -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab1">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textViewabt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aboutus1"
                        android:textSize="40sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        hebronradio:fontName="bariol.otf"
                        android:textStyle="bold" />

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textViewabt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="@string/aboutus1"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/textViewabt1"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"/>

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/emailHeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/emailHeb"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/textViewabt2"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"
                        android:clickable="true"
                        />

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textViewabt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aboutus2"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/emailHeb"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"/>

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/webHeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instaHeb"
                        android:textSize="25sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/textViewabt3"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"
                        android:clickable="true"/>

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textViewabt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aboutus3"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/webHeb"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"/>

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/twitHeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twitHeb"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/textViewabt4"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"
                        android:clickable="true"/>

                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textViewabt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aboutus4"
                        android:textSize="27sp"
                        android:textColor="@color/Plain"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/twitHeb"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        hebronradio:fontName="bariol.otf"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hebron_logo"
                        android:layout_below="@id/textViewabt5"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="50dp"
                        tools:ignore="ContentDescription" />
                </RelativeLayout></ScrollView>

                <!-- Tab 2 Listen now-->
                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rect_div"
                        android:id="@+id/plylay"
                        android:elevation="4dp">


                        <Space
                            android:layout_width="25dp"
                            android:layout_height="1dp"
                            android:id="@+id/dummy2"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/dummy2"
                            android:layout_centerVertical="true"
                            android:id="@+id/plysng"
                            android:background="@drawable/ic_play_pause"
                            android:textOff=""
                            android:textOn=""/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/dummy2"
                            android:layout_centerVertical="true"
                            android:id="@+id/stpsng"
                            android:background="@drawable/button_stop_custom"
                            />
                    </RelativeLayout>
                    <com.digzdigital.hebronradio.MyTextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/plylay"
                        android:textSize="35dp"
                        android:text="@string/listen"
                        hebronradio:fontName="bariol.otf"
                        android:textStyle="bold"
                        android:textColor="@color/Plain"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hebron_logo"
                        android:layout_alignParentTop="true"
                        android:paddingTop="30dp"
                        android:layout_centerHorizontal="true"/>


                </RelativeLayout>

                <!-- Tab 3 Programmes-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab3">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.digzdigital.hebronradio.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progs"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:paddingTop="85dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="56sp"
                        hebronradio:fontName="bariol.otf"
                        android:textStyle="bold"
                        android:textColor="@color/Plain"
                        android:id="@+id/textViewprog"/>
                    <RelativeLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/textViewprog"
                        android:paddingTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/weeklay">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/mon"
                            android:textColor="#ffffff"
                            android:id="@+id/btnmon"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy20"
                            android:layout_below="@id/btnmon"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@id/dummy20"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/tue"
                            android:textColor="#ffffff"
                            android:id="@+id/btntue"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy21"
                            android:layout_below="@id/btntue"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@id/dummy21"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/wed"
                            android:textColor="#ffffff"
                            android:id="@+id/btnwed"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy22"
                            android:layout_below="@id/btnwed"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@+id/dummy22"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/thu"
                            android:textColor="#ffffff"
                            android:id="@+id/btnthu"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy23"
                            android:layout_below="@id/btnthu"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@id/dummy23"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/fri"
                            android:textColor="#ffffff"
                            android:id="@+id/btnfri"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy24"
                            android:layout_below="@id/btnfri"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@id/dummy24"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/sat"
                            android:textColor="#ffffff"
                            android:id="@+id/btnsat"
                            android:textSize="18sp"/>
                        <Space
                            android:layout_width="15dp"
                            android:layout_height="8dp"
                            android:id="@+id/dummy25"
                            android:layout_below="@id/btnsat"
                            android:layout_centerHorizontal="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_below="@id/dummy25"
                            android:background="@drawable/button_bg_custom"
                            android:text="@string/sun"
                            android:textColor="#ffffff"
                            android:id="@+id/btnsun"
                            android:textSize="18sp"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hebron_logo"
                        android:layout_below="@id/weeklay"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
                </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
